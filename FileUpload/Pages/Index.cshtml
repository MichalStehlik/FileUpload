@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>List of common files</h1>

@if (Model.Files.Count > 0)
{
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Preview</th>
                <th>Name</th>
                <th>Type</th>
                <th>Uploader</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var f in Model.Files)
        {
            <tr>
                @if (f.Thumbnail != null)
                {
                    //var encodedImage = String.Format("data:image/jpg;base64, {0}", Convert.ToBase64String(f.Thumbnail)); // Suitable for very small images only
                    //<td><img src="@encodedImage" style="height: 64px" /></td>
                    <td><img src="@Url.Page("/Index","Thumbnail",new {filename=f.Id })" /></td>

                }
                else
                {
                    <td></td>
                }
                <td>@f.OriginalName</td>
                <td>@f.ContentType</td>
                <td>@f.Uploader.UserName</td>
                <td>@f.Uploaded</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page-handler="download" asp-route-filename="@f.Id">Download</a>
                    @if (f.Thumbnail != null)
                    {
                        <a class="btn btn-sm btn-secondary" asp-page-handler="thumbnail" asp-route-filename="@f.Id">Thumbnail</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>There are no files uploaded yet.</p>
}
